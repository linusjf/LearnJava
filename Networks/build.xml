  <!-- Deletes the existing build, docs and dist directory-->
  <target name="clean">
    <delete>
      <fileset dir="."
               includes="**/*.class,**/*.gif,**/*.png,**/*.au" />
    </delete>
    <delete dir="${docs.dir}" />
    <delete dir="${dist.dir}" />
