  <target name="compile"
          depends="clean, makedir,format,checkstyle">
    <javac includeantruntime="false"
           srcdir="${src.dir}"
           destdir="${build.dir}">
      <compilerarg value="-Xlint:-options" />
    </javac>
  </target>
  <!-- Creates Javadoc -->
  <target name="docs"
